<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:caid_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    caid_view:cardCornerRadius="10dp"
    caid_view:cardElevation="10dp"
    >

    <ImageView
        android:id="@+id/cover"
        android:scaleType="centerCrop"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_marginTop="@dimen/txt_margin_tiny"
        android:layout_gravity="center_horizontal"
        tools:src="@drawable/horizontal_rain" />

    <TextView
        android:id="@+id/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="某某活动大会"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="115dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/association_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginStart="10dp"
        tools:text="某某社团" />

    <TextView
        android:id="@+id/signTime_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="2020/2/20-2020/2/23"
        android:layout_marginTop="160dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/charge_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/special_charge_none" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="10dp"
        android:text="@string/special_activity_state_9" />

</androidx.cardview.widget.CardView>