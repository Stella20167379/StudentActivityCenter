<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:caid_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    caid_view:cardCornerRadius="5dp"
    caid_view:cardElevation="6dp"
    tools:viewBindingIgnore="true">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        tools:src="@drawable/horizontal_rain" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="120dp"
        android:layout_marginStart="5dp"
        android:text="某某社团" />

    <TextView
        android:id="@+id/introduction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="5dp"
        tools:text="某某社团的介绍内容。。。...........................................的方法烦烦烦烦烦烦的" />

</androidx.cardview.widget.CardView>