<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:caid_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    caid_view:cardCornerRadius="15dp"
    caid_view:cardElevation="8dp"
    android:padding="10dp"
    tools:viewBindingIgnore="true"
    >

    <ImageView
        android:id="@+id/cover"
        android:layout_width="200dp"
        android:layout_height="110dp"
        tools:src="@drawable/horizontal_rain" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="120dp"
        android:text="某某社团" />

    <TextView
        android:id="@+id/introduction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="某某社团的介绍内容。。。...........................................的方法烦烦烦烦烦烦的" />

</com.google.android.material.card.MaterialCardView>