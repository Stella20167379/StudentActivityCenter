<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--   固定在顶部的返回菜单栏     -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/ic_arrow_back_black_24"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingStart="@dimen/fragment_horizontal_margin"
        android:paddingEnd="@dimen/fragment_horizontal_margin"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/portrait"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:elevation="10dp"
            tools:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            app:shapeAppearanceOverlay="@style/circleImageStyle" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="某某社团"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/fragment_vertical_margin" />

        <View
            android:id="@+id/divider01"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/fragment_vertical_margin"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/introductionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社团介绍"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/introduction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_vertical_margin"
            android:text="这是社团的介绍。。。"
            android:maxLines="3" />

        <View
            android:id="@+id/divider02"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="@dimen/fragment_vertical_margin" />

        <TextView
            android:id="@+id/bulletinTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_vertical_margin"
            android:text="社团公告"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bulletin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_vertical_margin"
            android:text="这是社团的公告。。。" />


            <View
                android:id="@+id/divider03"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fragment_vertical_margin"
                android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/activitiesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_vertical_margin"
            android:layout_gravity="center_horizontal"
            android:text="社团活动"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
